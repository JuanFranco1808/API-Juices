<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Camisetas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
  </head>
  <body>
    <h1 class="alert alert-success">Camisetas</h1>
    <div class="row">
      <div class="col-md-1"></div>
          <div class="col-md-10">
              <table class="table table-bordered border-primary">
                  <tr class="table-success">
                      <th>Id del televisor</th>
                      <th>Nombre del televisor</th>
                      <th>Referencia del televisor</th>
                      <th>Tamaño del televisor</th>
                      <th>Descripcion del televisor</th>
                      <th>Imagen del televisor</th>
                      <th>Categoria del televisor</th>
                      <th>Precio del televisor</th>
                      <th>Editar</th>
                      <th>Eliminar</th>
                  </tr>
                    <% televisions.map( (televisions) =>{%>
                      <tr class="table-warning">
                          <td><%= televisions.television_id %></td>
                          <td><%= televisions.television_name %></td>
                          <td><%= televisions.television_reference %></td>
                          <td><%= televisions.television_size %></td>
                          <td><%= televisions.television_description %></td>
                          <td><img src="/imgs/<%= televisions.television_image %>" alt="Imagen del televisor" width="100" height="100"></td>
                          <td><%= televisions.category.category_name %></td>
                          <td><%= televisions.television_price %></td>
                          <td><a href="/admin/products/edit/<%= televisions.television_id %>" class="btn btn-success">Editar</a></td>
                          <td>
                            <form action="/admin/products/destroy/<%= televisions.television_id %>" method="POST">
                              <input type="submit" class="btn btn-danger" onclick="return confirm('Está Seguro?')" value = "Eliminar">
                            </form>
                          </td>
                      </tr>
                      <% }) %>
              </table>
              <a href="/admin/products/create" class="btn btn-primary">Create new Television</a>
            </div>
      <div class="col-md-1"></div>
  </div>
  </body>
</html>